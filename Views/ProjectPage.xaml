<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SeiveIT.Views.ProjectPage"
             xmlns:views="clr-namespace:SeiveIT.Views">
    <VerticalStackLayout x:Name="mainlayout">
        <Grid
            Margin="0,0,0,50"
            ColumnDefinitions="*, Auto"
            RowDefinitions="*">
            <Label
                FontFamily="Cormorant"
                FontSize="24"
                FontAttributes="Bold"
                Text="Outcrops" 
                Grid.Row="0" 
                Grid.Column="0" />
            <Button 
                Text="New Outcrop" 
                Clicked="displayPopup" 
                Grid.Row="0" 
                Grid.Column="1"/>

        </Grid>
    </VerticalStackLayout>
</ContentPage>